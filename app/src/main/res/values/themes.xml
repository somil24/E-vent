<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Compass" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Heading" parent="Theme.Compass">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Subheading" parent="Theme.Compass">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Chip" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Title" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.SubTitle" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Tab" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Event.Min.Heading" parent="Theme.Compass">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Event.Min.Subheading" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Event.Min.Content" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Button" parent="Theme.Compass">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="EditText.Default" parent="TextAppearance.Title">
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="CardView.Tab.Active" parent="Theme.Compass">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">@color/accent</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CardView.Tab.Inactive" parent="Theme.Compass">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">@color/background</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>